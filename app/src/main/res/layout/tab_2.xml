<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/jasonBike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:contentDescription="jasonBike"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:src="@drawable/jasonbike" />


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:weightSum="5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp">

                    <TextView
                        android:id="@+id/issues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/accentColor"
                        android:elevation="8dp"
                        android:padding="3dp"
                        android:text="@string/commit"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/issuesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/issues"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/issues1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:background="@color/white"
                            android:elevation="5dp"
                            android:padding="20dp"
                            android:text="@string/issues1"
                            android:textColor="@color/darkText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/issues2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@color/white"
                            android:elevation="5dp"
                            android:padding="20dp"
                            android:scaleType="fitStart"
                            android:text="@string/issues2"
                            android:textColor="@color/darkText"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/issues3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@color/white"
                            android:elevation="5dp"
                            android:padding="20dp"
                            android:text="@string/issues3"
                            android:textColor="@color/darkText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/issues4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@color/white"
                            android:elevation="5dp"
                            android:padding="20dp"
                            android:text="@string/issues4"
                            android:textColor="@color/darkText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/issues5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/white"
                            android:elevation="5dp"
                            android:padding="20dp"
                            android:text="@string/issues5"
                            android:textColor="@color/darkText"
                            android:textSize="16sp" />


                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
